{
    "name": "Zoom Meet Scheduler",
    "version": "1.0",
    "description": "Schedule Zoom meetings directly from Google Calendar.",
    "manifest_version": 2,
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Zoom Meet Scheduler",
      "default_popup": "index.html"
    },
    "permissions": [
      "identity",
      "activeTab",
      "tabs",
      "storage",
      "https://*.zoom.us/*",
      "https://www.googleapis.com/auth/calendar"
    ]
  }
  